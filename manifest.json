{
  "name": "Hello Extensions",
  "description" : "Base Level Extension",
  "version": "1.0",

  "browser_action": {
    "default_popup": "hello.html",
    "default_icon": "small_hack_logo.png"
  },

// we need to have permission to access the activeTab
  "permissions": [
   "activeTab"
   ]

  "manifest_version": 2,

 "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      }
      "description": "Opens hello.html"
    }
  }
}